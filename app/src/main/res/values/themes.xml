<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirebaseLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#07040B</item>
        <item name="colorPrimaryDark">#06040C</item>
        <item name="colorAccent">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FirebaseLogin.Fullscreen" parent="Theme.FirebaseLogin">
        <item name="android:actionBarStyle">@style/Widget.Theme.FirebaseLogin.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.FirebaseLogin.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>